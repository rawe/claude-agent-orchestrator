#!/usr/bin/env -S uv run --script
# /// script
# requires-python = ">=3.11"
# dependencies = [
#     "claude-agent-sdk",
#     "typer",
#     "httpx",
# ]
# ///
"""
Start a new agent orchestrator session.

This command starts a new Claude AI session, optionally with an agent configuration.

Configuration:
    AGENT_ORCHESTRATOR_AGENT_API_URL: API base URL (default: http://localhost:8767)
"""

import sys
from pathlib import Path

# Add lib to path for shared modules
sys.path.insert(0, str(Path(__file__).parent / "lib"))

import typer
from typing import Optional

app = typer.Typer(add_completion=False)


@app.command()
def main(
    session_name: str = typer.Argument(..., help="Name of the session"),
    prompt: Optional[str] = typer.Option(None, "-p", "--prompt", help="Session prompt"),
    agent: Optional[str] = typer.Option(None, "--agent", help="Agent to use"),
    project_dir: Optional[Path] = typer.Option(None, "--project-dir", help="Project directory"),
):
    """
    Start a new agent orchestrator session.

    Examples:
        ao-start mysession -p "Write hello world"
        ao-start research --agent web-researcher -p "Research AI"
        cat prompt.md | ao-start mysession
    """
    from config import load_config
    from session import validate_session_name
    from session_client import SessionClient, SessionClientError
    from agent_api import get_agent_api, AgentAPIError
    from claude_client import run_session_sync
    from utils import (
        get_prompt_from_args_and_stdin,
        error_exit,
        debug_log,
    )

    # DEBUG LOGGING - Command entry
    debug_log("COMMAND - ao-start", {
        "cwd": str(Path.cwd()),
        "argv": sys.argv,
        "session_name": session_name,
        "prompt": prompt or "None (will read from stdin)",
        "agent": agent or "None",
        "project_dir": str(project_dir) if project_dir else "None",
    })

    try:
        # 1. Validate session name
        validate_session_name(session_name)

        # 2. Load configuration
        config = load_config(
            cli_project_dir=str(project_dir) if project_dir else None,
        )

        # 3. Check session doesn't already exist (via API)
        try:
            client = SessionClient(config.session_manager_url)
            existing_session = client.get_session_by_name(session_name)
            if existing_session:
                error_exit(
                    f"Session '{session_name}' already exists. "
                    "Use 'ao-resume' command to continue or choose a different name"
                )
        except SessionClientError as e:
            # API error - warn but continue (session will be created)
            import sys
            print(f"Warning: Could not check session existence: {e}", file=sys.stderr)

        # 4. Get prompt (from -p and/or stdin)
        user_prompt = get_prompt_from_args_and_stdin(prompt)

        # 5. Load agent from API if specified
        final_prompt = user_prompt
        mcp_servers = None
        agent_name = None

        if agent:
            try:
                agent_data = get_agent_api(agent)
            except AgentAPIError as e:
                error_exit(str(e))

            if not agent_data:
                error_exit(f"Agent not found: {agent}")

            if agent_data.get("status") == "inactive":
                error_exit(f"Agent '{agent}' is inactive")

            agent_name = agent_data.get("name")

            # Prepend system prompt if available
            system_prompt = agent_data.get("system_prompt")
            if system_prompt:
                final_prompt = f"{system_prompt}\n\n---\n\n{user_prompt}"

            # Build MCP servers dict from API response
            mcp_servers_data = agent_data.get("mcp_servers")
            if mcp_servers_data:
                mcp_servers = mcp_servers_data

        # 6. Run Claude session (session is created via API during execution)
        session_id, result = run_session_sync(
            prompt=final_prompt,
            project_dir=config.project_dir,
            session_name=session_name,
            mcp_servers=mcp_servers,
            session_manager_url=config.session_manager_url,
            agent_name=agent_name,
        )

        # 7. Print result to stdout
        print(result)

    except ValueError as e:
        # Session validation errors, prompt errors, etc.
        error_exit(str(e))
    except FileNotFoundError as e:
        # Agent not found, config file issues, etc.
        error_exit(str(e))
    except ImportError as e:
        # SDK not installed
        error_exit(str(e))
    except Exception as e:
        # Unexpected errors (SDK errors, etc.)
        error_exit(f"Unexpected error: {e}")


if __name__ == "__main__":
    app()
