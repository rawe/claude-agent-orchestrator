# Neo4j MCP Server Configuration
# Copy this file to .env and configure as needed

# ==============================================================================
# NEO4J CONNECTION
# ==============================================================================
# By default, the MCP server connects to the local Neo4j container provided by
# the main docker-compose.yml. To use an external Neo4j database, uncomment and
# modify the settings below.

# Default: Local Neo4j container (agent-orchestrator-neo4j)
# The host.docker.internal address allows the MCP container to reach the Neo4j
# container running in the main docker-compose network.
# Port 7688 is used to avoid conflicts with Neo4j Desktop (which uses 7687)
NEO4J_URL=bolt://host.docker.internal:7688
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=agent-orchestrator
NEO4J_DATABASE=neo4j

# Example: External Neo4j (Aura, self-hosted, etc.)
# NEO4J_URL=bolt+s://your-neo4j-instance.databases.neo4j.io:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your-external-password
# NEO4J_DATABASE=neo4j

# Optional: Namespace for queries (useful for multi-tenant setups)
NEO4J_NAMESPACE=

# ==============================================================================
# MCP SERVER SETTINGS
# ==============================================================================
NEO4J_TRANSPORT=http
NEO4J_MCP_SERVER_HOST=0.0.0.0
NEO4J_MCP_SERVER_PATH=/mcp/

# CORS Configuration
NEO4J_MCP_SERVER_ALLOW_ORIGINS=example.com,www.example.com
NEO4J_MCP_SERVER_ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# QUERY SETTINGS
# ==============================================================================
NEO4J_READ_TIMEOUT=30
NEO4J_RESPONSE_TOKEN_LIMIT=10000
NEO4J_READ_ONLY=false
NEO4J_SCHEMA_SAMPLE_SIZE=1000
