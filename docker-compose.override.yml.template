# Docker Compose Override Template
#
# This file allows you to customize Docker Compose settings without modifying
# the main docker-compose.yml file. Your local overrides won't be committed to git.
#
# SETUP:
#   1. Copy this file: cp docker-compose.override.yml.template docker-compose.override.yml
#   2. Edit docker-compose.override.yml with your local settings
#   3. Run: make start (the override file is automatically loaded by Docker Compose)
#
# COMMON USE CASES:
#   - Point agent-coordinator to a different config directory (agents + capabilities)
#   - Change port mappings
#   - Add environment variables for debugging
#
# For simple cases (just changing CONFIG_DIR), you can also use a .env file:
#   echo "CONFIG_DIR=/path/to/your/config" >> .env

services:
  # Override agent-coordinator to use a custom config directory
  agent-coordinator:
    volumes:
      # Mount your local config directory to the container
      # The config directory should contain agents/ and capabilities/ subdirectories
      # Replace /path/to/your/config with your actual path
      - /path/to/your/config:/data/config

